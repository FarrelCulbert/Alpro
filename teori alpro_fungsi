a = int(input("masukan nilai : "))
b = int(input("masukan nilai : "))

def penjumlahan (a,b):
    hasil = a + b
    print ("hasil : ", hasil)
def pengurangan (a,b):
    hasil = a - b
    print ("hasil : ", hasil)
    
penjumlahan(a,b)
pengurangan(a,b)

================================
def luas_persegi(sisi):
    luas = sisi * sisi
    return luas
def luas_persegi_(sisi):
    luas = sisi * sisi
    
x = luas_persegi_(4)
print (x)
