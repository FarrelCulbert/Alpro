#tampa parameter
def perkalian():
    a = 2
    b = 4
    c = a*b
    print(c)
    
#dengan parameter    
def pembagian(a,b):
    c = int(a/b)
    print(c)
    
# luas segitiga   
def luas_segitiga(alas, tinggi):
    luas = (alas * tinggi) / 2
    print ("Luas segitiga:", luas)

# Pemanggilan fungsi
luas_segitiga(4, 6)
pembagian(10,5)

